{
  "name": "three-cuber",
  "private": true,
  "version": "0.0.1",
  "description": "Rubiks Cube in 3D (threejs) in your browser",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage":"",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adityaganesh2k/three-cuber.git"
  },
  "bugs": {
    "url": "https://github.com/adityaganesh2k/three-cuber/issues"
  },
  "keywords": [
    "3d",
    "three",
    "cube",
    "rubiks",
    "cuber",
    "size",
    "parser"
  ], "files": [
    "src/**/*",
    "dist/**/*",
    "example/**/*"
  ],

  "lint-staged": {
    "src/*.{js,jsx}": [
      "eslint . --fix",
      "prettier --write ."
    ]
  },

  "scripts": {
    "preinstall": "npx only-allow pnpm", 
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint --fix main.js",
    "format": "prettier -w .",
    "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/three": "^0.144.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "three-orbit-controls": "^82.1.0",
    "typescript": "^4.6.4",
    "vite": "^3.1.0",
    "three": "^0.145.0"
  },
  "peerDependencies": {
    "three": "^0.145.0"
  },
  "dependencies": {
  }
}
